<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kandidat.nfc.nfcapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- Android SDK 10 eller högre krävs för NFC. Version 14 har alla de senaste funktionerna -->
    <!--
        <uses-sdk
         android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    -->


    <!-- Tillåter NFC samt gör appen endast tillgänglig för telefoner med NFC -->
    <uses-permission android:name="android.permission.NFC" />
    <!-- <uses-feature android:name="android.hardware.nfc" android:required="true" /> -->


    <!-- HAD TO CHANGE SDK VERSION FOR MY OLD PHONE/KRISTOFER -->
    <!-- okej, men ändra tillbaka, man kan inte köra nfc på api5 -->
    <!-- LG L5 använder Sdk-version 15 -->

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="kandidat.nfc.nfcapp.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name="kandidat.nfc.nfcapp.PasswordActivity"
            android:label="@string/menu_settings" >
        </activity>
        <activity
            android:name="kandidat.nfc.nfcapp.AccessActivity"
            android:label="@string/title_activity_access" >
        </activity>
        <activity
            android:name="kandidat.nfc.nfcapp.DeniedActivity"
            android:label="@string/title_activity_denied" >
        </activity>
        <activity
            android:name="kandidat.nfc.nfcapp.MainActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="kandidat.nfc.nfcapp.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>