<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@drawable/background_app" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/settings_button_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="toPassword"
                android:text="Password"
                android:drawableLeft="@drawable/ic_menu_stop"
                android:gravity="center_horizontal|center_vertical"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_menu_login"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="toKeys"
                android:text="Key Ring" />
            
			<Button
                android:id="@+id/admin_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_menu_login"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="toAdmin"
                android:text="Change key" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>